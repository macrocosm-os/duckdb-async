{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2020", "esnext"],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./dist",
    "strict": true,
    "target": "ES2020",
    "types": ["node", "jest"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
